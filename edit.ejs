<% include part/header %>
<form class="ui form" action="/index/<%= displays._id %>?_method=PUT" method="POST" >
  <div class="field">
      <h1>Edit: <%= displays.name %></h1>
    <label>Name</label>
    <input type="text" name="dogs[name]" value="<%= displays.name %>">
  </div>
  <div class="field">
    <label>Image Url</label>
    <input type="text" name="dogs[image]" value="<%= displays.image %>">
  </div>
  <div class="field">
     <label>Sex</label>
    <select multiple="" name="dogs[sex]" class="ui dropdown">
        <option value="Unidentify">Choose your pet gender ...</option>
         <option value="Male">Male</option>
          <option value="Female">Female</option>
      </select>
  </div>
  <div class="field">
    <label>Description:</label>
    <textarea name="dogs[description]" rows="20" cols="100"><%= displays.description %> </textarea>
  </div>
  <button class="ui button" type="submit">Submit</button>
</form>